.container{
  padding: 0;
  margin: 0;
  width: 100%;
  overflow-x: hidden;
}
.top{
  width: 100%;
  background-color: #f6d526;
  padding: 5px;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
}
.date{
  display: inline-block;
  width: 30%;
  text-align: center;
}
.income{
  display: inline-block;
  width: 40%;
  text-align: center;
}
.payout{
  display: inline-block;
  width: 30%;
  text-align: center;
}
.font12{
  font-size: 12px;
  color: black;
}
.font16{
  font-size: 16px;
  color: black;
  font-weight: 300;
}
.detail{
  width: 100%;
  padding: 10px 20px;
}
.item{
  width: 100%;
  height: 36px;
  padding: 0 15px;
  margin-bottom: 5px;
}
.icon-image{
  width: 15%;
  display: inline-block;
  vertical-align: middle;
}
.image{
  width: 25px;
  height: 25px;
  vertical-align: middle;
}
.note{
  width: 65%;
  display: inline-block;
  vertical-align: middle;
}
.amount{
  width: 20%;
  display: inline-block;
  vertical-align: middle;
}
.detail-date{
  width: 50%;
  display: inline-block;
}
.detail-amount{
  width: 50%;
  display: inline-block;
  text-align: right;
}
.view-body{
  margin-top: 50px;
  width: 100%;
}
.detail-list{
  width: 100%;
}
.detail-title{
  padding: 0 20px;
  border-bottom: 1px solid #eee;
}