.container{
  padding: 5px 10px;
  z-index: 777;
}
.items{
  width: 100%;
  padding: 10px 10px 10px 10px;
}
.item{
  display: inline-block;
  width: 25%;
  text-align: center;
}
.item-text{
  font-size: 22rpx;
}
.item-image{
  text-align: center;
  width: 100%;
  padding:10px 0px;
}
.icon-image{
  width: 47px;
  height: 47px;
}

/*modal*/
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 888;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 380px;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-color: #F8F8F8;
  border-radius: 10px 10px 0 0;
}
/*弹出窗内容样式*/
textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.footer{
  width: 100%;
  padding: 0 5px;
}
.footer-item{
  width: 45%;
  display: inline-block;
  padding: 0 5px;
}

